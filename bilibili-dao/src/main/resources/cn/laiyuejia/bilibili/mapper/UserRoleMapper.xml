<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.laiyuejia.bilibili.mapper.UserRoleMapper">

    <resultMap id="BaseResultMap" type="cn.laiyuejia.bilibili.domain.auth.UserRole">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="userId" column="user_id" jdbcType="BIGINT"/>
            <result property="roleId" column="role_id" jdbcType="BIGINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,role_id,
        create_time
    </sql>
    <select id="getUserRoleByUserId" resultType="cn.laiyuejia.bilibili.domain.auth.UserRole" parameterType="java.lang.Long">
        select
            ur.*,
            ar.name roleName,
            ar.code roleCode
        from
            t_user_role ur
            left join t_auth_role ar on ur.role_id = ar.id
        where
            ur.user_id = #{userId}
    </select>
</mapper>
